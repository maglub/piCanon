#!/bin/bash

this_dir=$(cd `dirname $0`;pwd)

. $this_dir/../config/piSnap.conf
. $this_dir/functions

TS=$(date "+%Y%m%d_%H%M%S")
fileName=$saveDir/$TS.jpg

function snap(){

  maxTries=3
  tries=0

  while [ $tries -lt $maxTries ]
  do
    gphoto2 --capture-image-and-download --no-keep --stdout > $saveDir/$TS.jpg
    ret=$?
    [ $ret -eq 0 ] && { ln -fs $fileName $saveDir/latest.jpg ; echo $(basename $fileName); return 0 ; }
    (( tries = $tries + 1 ))
  done

  echo "Error: could not snap the picture" 1>&2
  return 1
}
#===================================
# MAIN
#===================================
if cameraOn
then
  echo "  - Snap" 1>&2
  snap
else
  echo "  - The camera is not on"
fi
